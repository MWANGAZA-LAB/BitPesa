# API Gateway Configuration
PORT=3000
NODE_ENV=development

# Service URLs
LIGHTNING_SERVICE_URL=http://localhost:3001
MPESA_SERVICE_URL=http://localhost:3002
TRANSACTION_SERVICE_URL=http://localhost:3003
CONVERSION_SERVICE_URL=http://localhost:3004
RECEIPT_SERVICE_URL=http://localhost:3005
RATE_LIMIT_SERVICE_URL=http://localhost:3006

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://bitpesa.com

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
COMPRESSION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
