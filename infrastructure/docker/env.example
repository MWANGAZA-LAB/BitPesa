# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=BitPesa Bridge

# Database
DATABASE_URL="postgresql://bitpesa_user:bitpesa_password@localhost:5432/bitpesa?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# MongoDB
MONGODB_URI="mongodb://bitpesa_admin:bitpesa_password@localhost:27017/bitpesa_logs?authSource=admin"

# Lightning Network (LND)
LND_GRPC_HOST=localhost:10009
LND_MACAROON_PATH=/path/to/admin.macaroon
LND_TLS_CERT_PATH=/path/to/tls.cert
LND_NETWORK=testnet

# M-Pesa Daraja API
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_PASSKEY=your-passkey
MPESA_SHORTCODE=174379
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=Safaricom999!*!
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/mpesa/callback
MPESA_TIMEOUT_URL=https://yourdomain.com/api/v1/mpesa/timeout
MPESA_RESULT_URL=https://yourdomain.com/api/v1/mpesa/result

# Price Feeds
BINANCE_API_KEY=your-binance-key
BINANCE_API_SECRET=your-binance-secret
COINBASE_API_KEY=your-coinbase-key

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@bitpesa.com

# SMS (Africa's Talking)
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_USERNAME=sandbox

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=bitpesa-documents

# Feature Flags
ENABLE_2FA=true
ENABLE_BIOMETRIC=true
MAINTENANCE_MODE=false

# Limits
MAX_TRANSACTION_AMOUNT_KES=500000
MIN_TRANSACTION_AMOUNT_KES=10
DAILY_LIMIT_KES=1000000
WITHDRAWAL_LIMIT_KES=500000

# Fees
BASE_FEE_PERCENTAGE=0.025
LIGHTNING_FEE_SATS=5
MPESA_FEE_PERCENTAGE=0.01
